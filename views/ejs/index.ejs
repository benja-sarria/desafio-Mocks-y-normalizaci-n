<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />
        <title>Products</title>
    </head>
    <body>
        <div class="container">
            <% if(allProducts.length > 0){ %>
            <div class="bg-light container ms-3">
                <h1 class="fw-500 fs-2 p-4">Todos nuestros productos</h1>
            </div>
            <div class="bg-light p-5 rounded-lg m-3 container table-responsive">
                <table class="table table-hover">
                    <tr class="">
                        <th class="fs-4">Producto</th>
                        <th class="fs-4">Precio</th>
                        <th class="fs-4">Imagen</th>
                    </tr>
                    <% allProducts.forEach((product) => {%>
                    <tr>
                        <td><%=product.title%></td>
                        <td>
                            <%=new Intl.NumberFormat("es-AR", { style:
                            "currency", currency: "ARS",
                            }).format(product.price)%>
                        </td>
                        <td>
                            <img
                                src="<%=product.thumbnail%>"
                                alt="<%=product.id%>"
                            />
                        </td>
                    </tr>

                    <% })%>
                </table>
            </div>
            <% } else { %>
            <div
                class="container ms-3 alert-warning d-flex justify-content-center mt-5"
            >
                <h1 class="fw-500 fs-2 p-4">No hay productos disponibles</h1>
            </div>

            <% } %>
        </div>
    </body>
</html>
